<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.UFVCourt" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="Theme.UFVCourt.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.UFVCourt.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.UFVCourt.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.UFVCourt.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.UFVCourt.NoActionBar</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="PickerTheme" parent="android:Theme.Material.Light.Dialog.Alert">
        <item name="android:colorAccent">@color/pickerDarkGray</item>
        <item name="android:colorControlActivated">@color/pickerLightGray</item>
        <item name="android:textColorPrimary">@color/pickerDarkGray</item>
        <item name="android:textColorSecondary">@color/pickerDarkGray</item>
    </style>
</resources>